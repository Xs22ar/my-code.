#include<iostream>
using namespace std;
void merge(int arr[], int left, int m, int right)
{
	int i, q, k;
	int n1 = m - left + 1;
	int n2 = right - m;
	int* L = new int[n1], * R = new int[n2];
	for (i = 0; i < n1; i++) L[i] = arr[left + i];
	for (q = 0; q < n2; q++) R[q] = arr[m + 1 + q];
	i = q = 0; k = left;

	while (i < n1 && q < n2) {
		if (L[i] <= R[q]) {
			arr[k] = L[i];
			i++;
		}
		else {
			arr[k] = R[q];
			q++;
		}
		k++;
	}

	while (i < n1) {
		arr[k] = L[i]; i++;
		k++;
	}
	while (q < n2) {
		arr[k] = R[q]; q++;
		k++;

	}
}
void mergeSort(int arr[], int left, int right) {
	if (left < right) {
		int m = left + (right - left) / 2;
		mergeSort(arr, left, m); mergeSort(arr, m + 1, right);

		merge(arr, left, m, right);
	}
}
void print(int arr[], int n) {
	for (int i = 0; i < n; i++) {
		cout << arr[i] << " ";
	}
	cout << endl;

}
int main() {
	int arr[] = { 6,200,100,50 ,60 }; int n = sizeof(arr) / sizeof(arr[0]);
	mergeSort(arr, 0, n - 1); print(arr, n);
	return 0;
}
